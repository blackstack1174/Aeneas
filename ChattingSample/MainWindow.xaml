<Window x:Class="ChattingSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChattingSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="390" Width="261" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="txbChat" HorizontalAlignment="Left" IsEnabled="False" Height="299" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="249"/>
        <TextBox x:Name="txbUserName" HorizontalAlignment="Left" Height="27" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="68" Margin="0,304,0,0"/>
        <TextBox x:Name="txbMessage" HorizontalAlignment="Left" Height="27" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="176" Margin="73,304,0,0"/>
        <Button x:Name="btnSend" Content="Send" HorizontalAlignment="Left" Height="30" Margin="0,336,0,0" VerticalAlignment="Top" Width="249" RenderTransformOrigin="0.547,0.644" Click="btnSend_Click"/>

    </Grid>
</Window>
